<h1>Datos del estudiante</h1>
<p>
  <b>Usuario:</b>
  <%=h @student.login %>
</p>

<p>
  <b>Email:</b>
  <%=h @student.email %>
</p>

<p>
  <b>Nombre:</b>
  <%=h @student.name %>
</p>

<p>
  <b>Expediente:</b>
  <%=h @student.expedient %>
</p>

<h2>Asignaturas del Alumno</h2>
<% @student.signatures.each do |signature| %>
  <p><%= signature.name %></p>
<% end %>

  <% if current_user.is_a? Administrator %>
<%= link_to 'Editar', edit_student_path(@student) %> |
<%end%>
<%= link_to 'Volver al listado', students_path %>