<h1>Datos del estudiante</h1>
<p>
  <b>Usuario:</b>
  <%=h @student.login %>
</p>

<p>
  <b>Email:</b>
  <%=h @student.email %>
</p>

<p>
  <b>Nombre:</b>
  <%=h @student.name %>
</p>

<p>
  <b>Expediente:</b>
  <%=h @student.expedient %>
</p>

<h2>Asignaturas del Alumno</h2>
<% @student.find_signatures(@year_selected).each do |signature| %>
  <p><%= signature.name %></p>
<% end %>

