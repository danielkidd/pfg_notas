<% form_for(@part) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description,'Descripción' %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :weighted,'Porcentaje' %><br />
    <%= f.text_field :weighted %>
  </p>
 <!-- <p>
    <%= f.label :parent_id, %><br />
    <%= f.text_field :parent_id %>
  </p>
 -->
  <p>
    <%= f.label :min_compensable,'Mínimo compensable' %><br />
    <%= f.text_field :min_compensable %>
  </p>
  <p>
    <%= f.label :ordinary,'Tipo Matrícula' %><br />
    <%= f.check_box :ordinary %>
  </p>
  <p>
    <%= f.label :signature_id, 'Asignatura' %><br />
    <%= f.hidden_field :signature_id if @part.new_record? %>
    <%= text_field_tag 'signature', @part.signature.name, :disabled=>true, :size=>50 %>
  </p>
  <p>
    <%= f.label :year_id,'Año' %><br />
    <%= f.text_field :year_id %>
  </p>
  <p>
    <%= f.submit 'Crear Bloque' %>
  </p>
<% end %>
