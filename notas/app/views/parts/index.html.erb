<h1>Listing parts</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Weighted</th>
    <th>Parent</th>
    <th>Min compensable</th>
    <th>Ordinary</th>
    <th>Signature</th>
    <th>Year</th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%=h part.description %></td>
    <td><%=h part.weighted %></td>
    <td><%=h part.parent_id %></td>
    <td><%=h part.min_compensable %></td>
    <td><%=h part.ordinary %></td>
    <td><%=h part.signature_id %></td>
    <td><%=h part.year_id %></td>
    <td><%= link_to 'Show', part %></td>
    <td><%= link_to 'Edit', edit_part_path(part) %></td>
    <td><%= link_to 'Destroy', part, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New part', new_signature_part_path(@signature) %>