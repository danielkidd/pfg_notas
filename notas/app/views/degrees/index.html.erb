<h1>Listado de titulaciones</h1>

<table>
  <tr>
    <th>Nombre</th>
  </tr>

<% @degrees.each do |degree| %>
  <tr>
    <td><%=h degree.name %></td>
    <td><%= link_to 'Mostrar', degree %></td>
    <td><%= link_to 'Modificar', edit_degree_path(degree) %></td>
    <td><%= link_to 'Eliminar', degree, :confirm => '¿Estas seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva titulación', new_degree_path %>