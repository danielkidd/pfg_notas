  <tr>
    <th>Descripción</th>
    <th>Ponderación</th>
    <th>Mínimo compensable</th>
  </tr>

<%@signature.parts.each do |part|%>
  <%#if part.parent_id == nil%>
    <tr class="<%= cycle('impar', 'par') %>">

  <td><%= truncate h(part.description) %></td>
    <td class="num"><%=h part.weighted %></td>
    <td class="num"><%=h part.min_compensable %></td>
    </tr>
    <%#end%>
    <% end %>
</table>

